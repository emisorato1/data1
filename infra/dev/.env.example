# ============================================================================
# Enterprise AI Platform - Variables de Entorno (Development)
# ============================================================================
# Copia este archivo a .env y configura los valores
# cp .env.example .env
# ============================================================================

# ----------------------------------------------------------------------------
# PostgreSQL (Platform DB + Vector DB)
# ----------------------------------------------------------------------------
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=

# ----------------------------------------------------------------------------
# JWT Authentication
# ----------------------------------------------------------------------------
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=120

# ----------------------------------------------------------------------------
# OpenAI API (Requerido para RAG)
# ----------------------------------------------------------------------------
# Obtener en: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TEMPERATURE=0.2

# ----------------------------------------------------------------------------
# LangSmith (Opcional - Observabilidad de LLM)
# ----------------------------------------------------------------------------
# Obtener en: https://smith.langchain.com/
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=

# ----------------------------------------------------------------------------
# RAG / LangGraph
# ----------------------------------------------------------------------------
RAG_BASE_URL=http://rag-generation:2024

# ----------------------------------------------------------------------------
# pgvector (para scripts de seed)
# ----------------------------------------------------------------------------
PGVECTOR_HOST=
PGVECTOR_PORT=
PGVECTOR_DATABASE=
PGVECTOR_USER=
PGVECTOR_PASSWORD=
EMBEDDING_MODEL=text-embedding-3-small

# ----------------------------------------------------------------------------
# OpenText SQL Server (Metadata Pipeline)
# ----------------------------------------------------------------------------
SERVER=
DATABASE=
USER=
PASSWORD=
DB_DRIVER=SQL Server

# ----------------------------------------------------------------------------
# OpenText Content Server API (PDF download)
# ----------------------------------------------------------------------------
OTCS_BASE_URL=
OTCS_USERNAME=
OTCS_PASSWORD=
OTCS_TIMEOUT=60


# ----------------------------------------------------------------------------
# Langfuse (Observability - LLM Tracing)
# ----------------------------------------------------------------------------
LANGFUSE_SECRET_KEY=sk-lf-
LANGFUSE_PUBLIC_KEY=pk-lf-
LANGFUSE_BASE_URL=https://us.cloud.langfuse.com
LANGFUSE_HOST=https://us.cloud.langfuse.com
LANGFUSE_ENABLED=true